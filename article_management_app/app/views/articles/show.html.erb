<h2 align="center">Article ID: <%= @article.article_id %></h2>
<h2 align="center">Article Title: <%= @article.title %></h2> 
<div class="well col-xs-8 col-xs-offset-2">
    <h4 class="center article-description"><strong>Description:</strong></h4>
    <hr>
    <!-- simple_format displays the original formatting of the description -->
    <%= simple_format(@article.description) %>
    <!-- If someone bookmarks another user's profile, edit and delete should not be available -->
    <div class="article-actions">
        <% if logged_in? && (current_user == @article.user || current_user.admin?) %>
            <%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-xs btn-primary" %>
            <%= link_to "Delete this article", article_path(@article), method: :delete,
                data: { confirm: "Are you sure you wish to delete #{@article.title} #{@article.description}?" }, 
                class: "btn btn-xs btn-danger" %>
        <% end %>
        <%= link_to "View all articles", articles_path(@article), class: "btn btn-xs btn-success" %>
    </div>
</div>